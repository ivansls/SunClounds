<Page x:Class="SonClounds.View.First"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SonClounds.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="First">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition  Width="3*"/>
        </Grid.ColumnDefinitions>
        <!--Для левой фигни-->

        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Grid.Column="1" Grid.Row="2" Grid.RowSpan="5" Source="/Resources/Picture/Line.png" Margin="0,0,0,20"/>
        </Grid>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Северобайкальск" TextAlignment="Center" Margin="5" FontFamily="Franklin Gothic Demi" Foreground="#3D95B9" FontSize="20"/>
            <!--Не уверен с цветами-->
            <Separator VerticalAlignment="Bottom" Background="#3D95B9"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image  Source="/Resources/Picture/Sunny.png" Grid.Column="1"/>
                <TextBlock TextWrapping="Wrap" Grid.Column="2" Text="Ясно.21° Ощущается как 25°" FontFamily="Franklin Gothic Demi"  VerticalAlignment="Center" Foreground="#3D95B9" Margin="8,0,5,0" TextAlignment="Right" FontSize="16"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="16:00" VerticalAlignment="Center"  Foreground="#3D95B9" HorizontalAlignment="Center"/>
                <Image  Source="/Resources/Picture/Sunny.png"  Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" Grid.Column="2" Text="Ясно.21° Ощущается как 25°" FontFamily="Franklin Gothic Demi" VerticalAlignment="Center" Foreground="#3D95B9" Margin="10,0,0,0"/>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="17:00"  VerticalAlignment="Center" Foreground="#3D95B9" HorizontalAlignment="Center"/>
                <Image  Source="/Resources/Picture/Rainy.png" Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" Grid.Column="2" Text="Переменная облачность.20°. Ощущатеся как 19°" FontFamily="Franklin Gothic Demi" VerticalAlignment="Center" Foreground="#3D95B9" Margin="10,0,0,0"/>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="18:00" VerticalAlignment="Center" Foreground="#3D95B9" HorizontalAlignment="Center"/>
                <Image  Source="/Resources/Picture/Snow.png" Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" Grid.Column="2" Text="Дождь.19°.Ощущается как 15°" FontFamily="Franklin Gothic Demi" VerticalAlignment="Center" Foreground="#3D95B9" Margin="10,0,0,0"/>
            </Grid>
        </Grid>


        <!--Для Основной фигни-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*"/>
                <RowDefinition  Height="0.4*"/>
                <!--Можно поставить 0.3-->
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <!--Верхние кнопки-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Погода" HorizontalContentAlignment="Left" Margin="10,0,0,0" Background="#0000" BorderThickness="0" FontSize="20" />
                <Button Content="Настройки" HorizontalContentAlignment="Right" Grid.Column="1" Margin="0,0,10,0" Background="#0000" BorderThickness="0" FontSize="20"/>
            </Grid>


            <!--Какие-то параметры-->
            <Grid Grid.Row="1" Margin="10">
                <Grid.Background>
                    <SolidColorBrush Color="#FFF8C5B4" Opacity="0.6"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.05*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="21°" Grid.RowSpan="2"  VerticalAlignment="Center" FontSize="25"/>

                <!--Вертикальная черта-->
                <StackPanel Grid.Column="1" Grid.RowSpan="2" Orientation="Horizontal">
                    <Separator Background="#FFFFFF" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                </StackPanel>


                <!--Параметры-->
                <TextBlock Text="Ощущение" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"/>
                <TextBlock Text="Мин" Grid.Row="0" Grid.Column="3"   HorizontalAlignment="Center"/>
                <TextBlock Text="Макс" Grid.Row="0" Grid.Column="4"  HorizontalAlignment="Center"/>
                <TextBlock Text="Давление" Grid.Row="0" Grid.Column="5"  HorizontalAlignment="Center"/>
                <TextBlock Text="Влажность" Grid.Row="0" Grid.Column="6"  HorizontalAlignment="Center"/>
                <TextBlock Text="Ветер м/с" Grid.Row="0" Grid.Column="7"  HorizontalAlignment="Center"/>
                <TextBlock Text="Ветер" Grid.Row="0" Grid.Column="8"  HorizontalAlignment="Center"/>


                <!--Значение параметров-->
                <TextBlock Text="21°" Grid.Row="1" Grid.Column="2"  HorizontalAlignment="Center"/>
                <TextBlock Text="21°" Grid.Row="1" Grid.Column="3"  HorizontalAlignment="Center" />
                <TextBlock Text="21°" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center" />
                <TextBlock Text="21 мм рт ст" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center"/>
                <TextBlock Text="20%" Grid.Row="1" Grid.Column="6" HorizontalAlignment="Center" />
                <TextBlock Text="7 м/с" Grid.Row="1" Grid.Column="7" HorizontalAlignment="Center"/>
                <TextBlock Text="290" Grid.Row="1" Grid.Column="8" HorizontalAlignment="Center"/>
            </Grid>


            <!--Штука с пользовательскими элементами-->
            <Grid Grid.Row="2" Margin="10">
                <Grid.Background>
                    <SolidColorBrush Color="#FFF8C5B4" Opacity="0.6"/>
                </Grid.Background>
                <!--Для просмотра можно расскоментить-->
                <ListBox x:Name="UserEl" Background="#0000">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>


            </Grid>
            <!--Для графика-->
            <Grid Grid.Row="3" Margin="10">
                <Grid.Background>
                    <SolidColorBrush Color="#FFF8C5B4" Opacity="0.6"/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"/>
                    <!--Тут хз сколько ставить-->
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Кнопки-->
                <Button Content="Температура" Grid.Column="0" Margin="7" Background="#0000" BorderThickness="0"/>
                <Button Content="Ощущается как" Grid.Column="1" Margin="7" Background="#0000" BorderThickness="0"/>
                <Button Content="Давление" Grid.Column="2" Margin="7" Background="#0000" BorderThickness="0"/>

                <!--Сам график-->
                <!--Я пока хз какую библу будем юзать поэтому пока фотка-->
                <Image Grid.Row="1" Grid.ColumnSpan="3"/>
            </Grid>
        </Grid>

    </Grid>
</Page>
