<Page x:Class="SonClounds.View.First"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SonClounds.View"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1500"
      Title="First">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="438"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Для левой фигни-->

        <Grid Grid.Column="0">
            <Grid.Effect>
                <DropShadowEffect ShadowDepth="4" Opacity="0.2"/>
            </Grid.Effect>
            <Grid.Background>
                <SolidColorBrush Color="#FFF8C5B4" Opacity="0.3"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.24*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Grid.Column="1" Grid.Row="2" Grid.RowSpan="5" Source="/Resources/Picture/Line.png" Margin="0,0,0,20"/>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="68.5"/>
                <RowDefinition Height="205.5"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding City}" TextAlignment="Center" Margin="5" FontFamily="/Resources/Font/#Jura" Foreground="#3D95B9" FontSize="36"/>
            <!--Не уверен с цветами-->
            <Separator VerticalAlignment="Bottom" Background="#3D95B9"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.43*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Image Source="{Binding Icon1}" Grid.Column="1" Width="123" Height="123" />
                <TextBlock TextWrapping="Wrap" Grid.Column="2" Text="{Binding Text1}" FontFamily="/Resources/Font/#Jura"  VerticalAlignment="Center" Foreground="#3D95B9" Margin="10,0,30,0" TextAlignment="Right" FontSize="26"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.24*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="{Binding Time1}" VerticalAlignment="Center"  Foreground="#3D95B9" HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" FontSize="20" Margin="10,0,0,0"/>
                <Image  Source="{Binding Icon2}"  Grid.Column="1" VerticalAlignment="Center" Width="60" Height="60"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Left" Grid.Column="2" Text="{Binding Text2}" FontFamily="/Resources/Font/#Jura" VerticalAlignment="Center" Foreground="#3D95B9" Margin="10,0,45,0" FontSize="20"/>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.24*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="{Binding Time2}"  VerticalAlignment="Center" Foreground="#3D95B9" HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" FontSize="20"/>
                <Image  Source="{Binding Icon3}" Grid.Column="1" VerticalAlignment="Center" Width="60" Height="60"/>
                <TextBlock TextWrapping="Wrap" Grid.Column="2" Text="{Binding Text3}" FontFamily="/Resources/Font/#Jura" VerticalAlignment="Center" Foreground="#3D95B9"  Margin="10,0,45,0" FontSize="20"/>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.24*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="{Binding Time3}" VerticalAlignment="Center" Foreground="#3D95B9" HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" FontSize="20"/>
                <Image  Source="{Binding Icon4}" Grid.Column="1" VerticalAlignment="Center" Width="60"  Height="60"/>
                <TextBlock TextWrapping="Wrap" Grid.Column="2" Text="{Binding Text4}" FontFamily="/Resources/Font/#Jura" VerticalAlignment="Center" Foreground="#3D95B9"  Margin="10,0,45,0" FontSize="20"/>
            </Grid>
        </Grid>


        <!--Для Основной фигни-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition  Height="100"/>
                <!--Можно поставить 0.3-->
                <RowDefinition Height="216"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <!--Верхние кнопки-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Content="Погода" HorizontalContentAlignment="Left" Margin="10,0,0,0" Background="#0000" BorderThickness="0" FontSize="36" FontFamily="/Resources/Font/#Jura" Foreground="#fff"/>
                <Button Content="Настройки" HorizontalContentAlignment="Right" Grid.Column="1" Margin="0,0,10,0" Background="#0000" BorderThickness="0" FontSize="36" FontFamily="/Resources/Font/#Jura" Foreground="#fff"/>
            </Grid>


            <!--Какие-то параметры-->
            <Grid Grid.Row="1" Margin="10">
                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="4" Opacity="0.2"/>
                </Grid.Effect>
                <Grid.Background>
                    <SolidColorBrush Color="#FFF8C5B4" Opacity="0.3"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="98"/>
                    <ColumnDefinition Width="0.05*"/>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition  Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition Width="0.6*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Degrees}" Grid.RowSpan="2"  VerticalAlignment="Center" FontSize="64" FontFamily="/Resources/Font/#Jura" Foreground="#3D95B9" HorizontalAlignment="Center"  Margin="5,0,0,0"/>

                <!--Вертикальная черта-->
                <StackPanel Grid.Column="1" Grid.RowSpan="2" Orientation="Horizontal">
                    <Separator Background="#FFFFFF" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="4,6,0,6"/>
                </StackPanel>


                <!--Параметры-->
                <TextBlock Text="Ощущение" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>
                <TextBlock Text="Мин" Grid.Row="0" Grid.Column="3"   HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>
                <TextBlock Text="Макс" Grid.Row="0" Grid.Column="4"  HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>
                <TextBlock Text="Давление" Grid.Row="0" Grid.Column="5"  HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>
                <TextBlock Text="Влажность" Grid.Row="0" Grid.Column="6"  HorizontalAlignment="Center"  FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>
                <TextBlock Text="Ветер м/с" Grid.Row="0" Grid.Column="7"  HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>
                <TextBlock Text="Ветер" Grid.Row="0" Grid.Column="8"  HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>


                <!--Значение параметров-->
                <TextBlock Text="{Binding Feeling}" Grid.Row="1" Grid.Column="2"  HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Top"/>
                <TextBlock Text="{Binding Min}" Grid.Row="1" Grid.Column="3"  HorizontalAlignment="Center"  FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Top"/>
                <TextBlock Text="{Binding Max}" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24"  VerticalAlignment="Top"/>
                <TextBlock Text="{Binding Pressure}" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Top"/>
                <TextBlock Text="{Binding Humidity}" Grid.Row="1" Grid.Column="6" HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24"  VerticalAlignment="Top"/>
                <TextBlock Text="{Binding Wind}" Grid.Row="1" Grid.Column="7" HorizontalAlignment="Center"  FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Top"/>
                <TextBlock Text="{Binding Wind2}" Grid.Row="1" Grid.Column="8" HorizontalAlignment="Center" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="24" VerticalAlignment="Top"/>
            </Grid>


            <!--Штука с пользовательскими элементами-->
            <Grid Grid.Row="2" Margin="10">
                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="4" Opacity="0.2"/>
                </Grid.Effect>
                <Grid.Background>
                    <SolidColorBrush Color="#FFF8C5B4" Opacity="0.3"/>
                </Grid.Background>
                <!--Для просмотра можно расскоментить-->
                <ListBox x:Name="UserEl" Background="#0000">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>


            </Grid>
            <!--Для графика-->
            <Grid Grid.Row="3" Margin="10">
                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="4" Opacity="0.2"/>
                </Grid.Effect>
                <Grid.Background>
                    <SolidColorBrush Color="#FFF8C5B4" Opacity="0.3"/>
                </Grid.Background>

                <!--Кнопки-->
                <WrapPanel HorizontalAlignment="Center">
                    <Button  Content="Температура" Grid.Column="0" Margin="7" Background="#87B6CA" Padding="7" BorderThickness="0" FontFamily="/Resources/Font/#Jura" Foreground="#fff" FontSize="23.66" Width="300" Height="40"/>
                    <Button Content="Ощущается как" Grid.Column="1" Margin="7" Background="#87B6CA" Padding="7" BorderThickness="0" FontFamily="/Resources/Font/#Jura"  Foreground="#fff"  FontSize="23.66" Width="300" Height="40"/>
                    <Button  Content="Давление" Grid.Column="2" Margin="7" Background="#87B6CA" Padding="7" BorderThickness="0" FontFamily="/Resources/Font/#Jura"  Foreground="#fff"  FontSize="23.66" Width="300" Height="40"/>

                    <Image  HorizontalAlignment="Center"  Grid.Row="1" Grid.ColumnSpan="3"  Source="/Resources/Picture/Sunny.png" Height="232" />

                </WrapPanel>
              

                <!--Сам график-->
                <!--Я пока хз какую библу будем юзать поэтому пока фотка-->
                
            </Grid>
        </Grid>

    </Grid>
</Page>
