<UserControl x:Class="SonClounds.View.WeatherCart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SonClounds.View"
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="110">
    <Grid>
        


        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Image  HorizontalAlignment="Center"  Grid.Row="0"  Source="/Resources/Picture/Sunny.png" Height="50" />



        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TextUpCen" Grid.Row="0" Text="{Binding Timegod}"/>
            <TextBlock x:Name="TextDownCen" Grid.Row="1" Text="{Binding Bebra}"/>


        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            
            
            
            
        </Grid>

    </Grid>
</UserControl>
